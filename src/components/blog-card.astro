---
import { Image } from "astro:assets";

interface Props {
  post: any;
}

const { post } = Astro.props;
---

<li>
  <a
    href={`/blog/${post.slug}`}
    class="sm:h-[150px] sm:min-h-[150px] sm:max-h-[150px] p-2 rounded-lg transition duration-100 flex flex-col sm:flex-row grayscale hover:grayscale-0 hover:bg-zinc-600"
  >
    <figure
      class="flex w-full sm:w-1/2 items-center justify-center h-[150px] sm:h-full"
    >
      <Image
        src={post.data.image.url}
        alt={post.data.image.alt}
        width={550}
        class="max-h-full max-w-full rounded-lg object-cover"
        loading="eager"
      />
    </figure>
    <div
      class="flex flex-col justify-center items-end pt-2 sm:py-4 pl-0 sm:pl-4 w-full sm:w-1/2"
    >
      <h3 class="text-2xl sm:text-2xl font-bold text-right">
        {post.data.title}
      </h3>
      <p class="text-right">{post.data.pubDate.toDateString()}</p>
    </div>
  </a>
</li>
