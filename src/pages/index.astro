---
import Layout from "../layouts/Layout.astro";
import Headshot from "../assets/headshot.jpg";
import CCC from "../assets/CCC.png";
import pdcare from "../assets/pdcareconnection.png";
import lofi from "../assets/lofi.png";
import VLP from "../assets/VLP.png";

import { getCollection } from "astro:content";
import { Image } from "astro:assets";

const allPosts = await getCollection("blogs");
---

<Layout title="Bryce Stabenow" activeLink="Home">
  <div class="flex flex-col items-center">
    <img
      src={Headshot.src}
      class="rounded-full w-28 h-28 mb-4"
      alt="A headshot image of me, Bryce Stabenow"
    />
    <h1 class="text-lg">
      I'm <strong>Bryce Stabenow</strong>, a software developer from St. Louis,
      MO.
    </h1>
    <p>I'm</p>
  </div>

  <div class="mt-16">
    <h2 class="text-xl font-extrabold mb-4">Recent Blog Articles:</h2>
    <ul class="flex flex-col space-y-6">
      {
        allPosts.slice(0, 3).map((post) => (
          <li>
            <a
              href={`/blog/${post.slug}`}
              class="h-[150px] min-h-[150px] max-h-[150px] p-2 rounded-lg transition duration-100 flex grayscale hover:grayscale-0 hover:bg-zinc-600"
            >
              <figure class="flex w-1/2 items-center justify-center h-full">
                <Image
                  src={post.data.image.url}
                  alt={post.data.image.alt}
                  class="max-h-full max-w-full rounded-lg object-cover"
                />
              </figure>
              <div class="flex flex-col justify-center items-end p-4 pr-0 w-1/2">
                <h3 class="text-3xl font-bold">{post.data.title}</h3>
                <p>{post.data.pubDate.toDateString()}</p>
              </div>
            </a>
          </li>
        ))
      }
    </ul>
    <a
      href="/blog"
      class="transition duration-100 mt-4 block w-full text-center hover:text-orange-600"
      >More Posts &rarr;</a
    >
  </div>

  <div class="mt-24">
    <h2 class="text-xl font-extrabold mb-4">Recent Client Projects:</h2>
    <div class="masonry">
      <div class="grid">
        <img src={VLP.src} />
        <div class="body">
          <div class="relative">
            <a class="link" target="_blank" href="/"></a>
          </div>
        </div>
      </div>
      <div class="grid">
        <img src={lofi.src} />
        <div class="body">
          <div class="relative">
            <a class="link" target="_blank" href="/"></a>
          </div>
        </div>
      </div>
      <div class="grid">
        <img src={pdcare.src} />
        <div class="body">
          <div class="relative">
            <a class="link" target="_blank" href="/"></a>
          </div>
        </div>
      </div>
      <div class="grid">
        <img src={CCC.src} />
        <div class="body">
          <div class="relative">
            <a class="link" target="_blank" href="/"></a>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
