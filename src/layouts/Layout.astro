---
import { ViewTransitions } from "astro:transitions";
import "../styles/global.css";

interface Props {
  title: string;
  activeLink: string;
}

const sidebarLinks = [
  { title: "Home", href: "/", active: Astro.props.activeLink === "Home" },
  { title: "Blog", href: "/blog", active: Astro.props.activeLink === "Blog" },
  {
    title: "Things I Dig",
    href: "/things-i-dig",
    active: Astro.props.activeLink === "Things",
  },
];

const { title } = Astro.props;
const sideLinkClasses = "mb-2 transition duration-100 ";
const passiveLinkClasses = "hover:text-orange-600 text-white";
const activeLinkClasses = "text-orange-600";

import { Icon } from "astro-icon/components";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/jpeg" href="/favicon.png" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="generator" content={Astro.generator} />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body>
    <div class="w-full min-h-screen flex">
      <div
        id="sidebar"
        class="gradient-border min-h-screen bg-zinc-800 min-w-[270px] w-1/3 flex justify-end relative"
      >
        <div
          class="max-h-[850px] h-full min-w-[270px] max-w-[270px] py-12 px-6 flex flex-col justify-between items-end text-white sticky top-0"
        >
          <div class="flex flex-col items-center w-full">
            <nav class="flex justify-center w-full">
              <ul class="text-xl font-bold">
                {
                  sidebarLinks.map((link) => (
                    <li
                      class={
                        sideLinkClasses +
                        (link.active ? activeLinkClasses : passiveLinkClasses)
                      }
                    >
                      <a href={link.href}>{link.title}</a>
                    </li>
                  ))
                }
              </ul>
            </nav>
          </div>
          <div class="w-full">
            <div class="flex flex-row justify-center">
              <a
                href="https://www.linkedin.com/in/bryce-stabenow-dev/"
                target="_blank"
              >
                <Icon
                  name="mdi:linkedin"
                  size={36}
                  class="hover:text-orange-600 transition duration-100"
                />
              </a>
              <a
                href="https://x.com/BryceStabenow"
                target="_blank"
                class="mx-2"
              >
                <Icon
                  name="mdi:twitter"
                  size={36}
                  class="hover:text-orange-600 transition duration-100"
                />
              </a>
              <a href="https://github.com/Bryce-Stabenow" target="_blank">
                <Icon
                  name="mdi:github"
                  size={36}
                  class="hover:text-orange-600 transition duration-100"
                />
              </a>
            </div>
            <span class="block text-center">Â© Bryce Stabenow, 2024</span>
          </div>
        </div>
      </div>

      <main class="bg-zinc-700 w-full min-h-screen py-12 px-6 text-white">
        <div class="max-w-3xl mx-auto">
          <slot />
        </div>
      </main>
    </div>
  </body>
</html>
