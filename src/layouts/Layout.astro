---
import { ViewTransitions } from "astro:transitions";

interface Props {
  title: string;
  activeLink: string;
}

const sidebarLinks = [
  { title: "Home", href: "/", active: Astro.props.activeLink === "Home" },
  { title: "Blog", href: "/blog", active: Astro.props.activeLink === "Blog" },
  {
    title: "Things I Dig",
    href: "/things-i-dig",
    active: Astro.props.activeLink === "Things",
  },
  {
    title: "About Me",
    href: "/about-me",
    active: Astro.props.activeLink === "About",
  },
];

const { title } = Astro.props;
const sideLinkClasses = "transition duration-100 ";
const passiveLinkClasses = "hover:text-orange-600 text-white";
const activeLinkClasses = "hover:text-white text-orange-600";

import { Icon } from "astro-icon/components";
import Headshot from "../assets/headshot.jpg";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/jpeg" href="/favicon.jpg" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body>
    <main class="w-full min-h-screen flex">
      <div
        id="sidebar"
        class="gradient-border min-h-screen bg-zinc-800 min-w-[270px] w-1/3 flex justify-end"
      >
        <div
          class="max-h-[850px] h-full min-w-[270px] max-w-[270px] py-12 px-6 flex flex-col justify-between items-end text-white"
        >
          <div class="flex flex-col items-center w-full">
            <img
              src={Headshot.src}
              class="rounded-full w-28 h-28 mb-4"
              alt="A headshot image of me, Bryce Stabenow"
            />
            <p>
              Hey, I'm <strong>Bryce</strong>, a software developer from St.
              Louis, MO.
            </p>
          </div>
          <nav class="flex justify-center w-full">
            <ul class="text-xl font-bold">
              {
                sidebarLinks.map((link) => (
                  <li
                    class={
                      sideLinkClasses +
                      (link.active ? activeLinkClasses : passiveLinkClasses)
                    }
                  >
                    <a href={link.href}>{link.title}</a>
                  </li>
                ))
              }
            </ul>
          </nav>
          <div class="w-full">
            <div class="flex flex-row justify-center">
              <a href="https://x.com/BryceStabenow" target="_blank">
                <Icon
                  name="mdi:twitter"
                  size={36}
                  class="hover:text-orange-600 transition duration-100"
                />
              </a>
              <a href="https://github.com/Bryce-Stabenow" target="_blank">
                <Icon
                  name="mdi:github"
                  size={36}
                  class="hover:text-orange-600 transition duration-100"
                />
              </a>
            </div>
            <span class="block text-center">Â© Bryce Stabenow, 2024</span>
          </div>
        </div>
      </div>

      <section class="bg-zinc-700 w-full min-h-screen" style="z-index: -2">
        <slot />
      </section>
    </main>
    <style>
      .gradient-border {
        --border-width: 3px;
        border-bottom: 0px;
        position: relative;

        &::after {
          position: absolute;
          content: "";
          top: calc(-1 * var(--border-width));
          left: calc(-1 * var(--border-width));
          z-index: -1;
          width: calc(100% + var(--border-width) * 2);
          height: calc(
            100% + var(--border-width)
          ); /* Set this to * 2 if you want y-axis border */
          background: linear-gradient(
            240deg,
            hsl(45, 100%, 70%),
            hsl(17, 97%, 62%),
            hsl(0, 95%, 66%)
          );
          background-size: 300% 300%;
          background-position: 0 50%;
          animation: moveGradient 4s alternate infinite;
        }
      }

      @keyframes moveGradient {
        50% {
          background-position: 100% 50%;
        }
      }
    </style>
  </body>
</html>
