---
import { ViewTransitions } from "astro:transitions";
import "../styles/global.css";

interface Props {
  title: string;
  activeLink: string;
  description?: string;
  keywords?: Array<string>;
}

const sidebarLinks = [
  { title: "Home", href: "/", active: Astro.props.activeLink === "Home" },
  { title: "Blog", href: "/blog", active: Astro.props.activeLink === "Blog" },
  {
    title: "Things I Dig",
    href: "/things-i-dig",
    active: Astro.props.activeLink === "Things",
  },
];

const { title, description, keywords } = Astro.props;
const sideLinkClasses = "mb-8 md:mb-2 transition duration-100 ";
const passiveLinkClasses = "hover:text-theme-accent text-theme-text";
const activeLinkClasses = "text-theme-accent";

import { Icon } from "astro-icon/components";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content={description ?? "The personal website of Bryce Stabenow"}
    />
    <meta
      name="keywords"
      content={keywords?.join(" ,") ??
        "Bryce Stabenow, Bryce Stabenow software dev, web developer blog, coding blog"}
    />
    <meta property="og:title" content="Bryce Stabenow | Software Developer" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://bryce-stabenow.com" />
    <meta property="og:image" content="https://bryce-stabenow.com/cover.png" />

    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/jpeg" href="/favicon.png" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="generator" content={Astro.generator} />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300..800;1,300..800&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
    <ViewTransitions />

    <!-- Inline script to prevent flash of wrong theme -->
    <script is:inline>
      (function() {
        const saved = localStorage.getItem('theme');
        if (saved) {
          document.documentElement.setAttribute('data-theme', saved);
        }
      })();
    </script>
  </head>
  <body class="bg-theme-body">
    <!-- 90s Baby decorative floating shapes (hidden by default, shown via CSS when theme is active) -->
    <div class="nineties-deco" aria-hidden="true">
      <svg width="100%" height="100%" xmlns="http://www.w3.org/2000/svg">
        <!-- Floating triangles -->
        <polygon points="60,10 70,30 50,30" fill="#67E8F9" opacity="0.25">
          <animateTransform attributeName="transform" type="rotate" values="0 60 20;360 60 20" dur="20s" repeatCount="indefinite"/>
        </polygon>
        <polygon points="85%,15% 90%,8% 95%,15%" fill="#F0ABFC" opacity="0.2">
          <animateTransform attributeName="transform" type="rotate" values="0 800 80;-360 800 80" dur="25s" repeatCount="indefinite"/>
        </polygon>
        <polygon points="70%,85% 75%,75% 80%,85%" fill="#A78BFA" opacity="0.18">
          <animateTransform attributeName="transform" type="rotate" values="0 600 600;360 600 600" dur="30s" repeatCount="indefinite"/>
        </polygon>

        <!-- Floating circles -->
        <circle cx="15%" cy="25%" r="18" fill="none" stroke="#67E8F9" stroke-width="2.5" opacity="0.3">
          <animate attributeName="cy" values="25%;28%;25%" dur="6s" repeatCount="indefinite"/>
        </circle>
        <circle cx="88%" cy="45%" r="12" fill="#F0ABFC" opacity="0.15">
          <animate attributeName="cy" values="45%;42%;45%" dur="8s" repeatCount="indefinite"/>
        </circle>
        <circle cx="45%" cy="90%" r="22" fill="none" stroke="#A78BFA" stroke-width="2" opacity="0.2">
          <animate attributeName="cx" values="45%;48%;45%" dur="10s" repeatCount="indefinite"/>
        </circle>

        <!-- Squiggly lines -->
        <path d="M 5% 60% Q 8% 55%, 11% 60% T 17% 60% T 23% 60%" fill="none" stroke="#67E8F9" stroke-width="2.5" stroke-linecap="round" opacity="0.25">
          <animate attributeName="d" values="M 5% 60% Q 8% 55%, 11% 60% T 17% 60% T 23% 60%;M 5% 62% Q 8% 57%, 11% 62% T 17% 62% T 23% 62%;M 5% 60% Q 8% 55%, 11% 60% T 17% 60% T 23% 60%" dur="5s" repeatCount="indefinite"/>
        </path>
        <path d="M 75% 70% Q 78% 65%, 81% 70% T 87% 70% T 93% 70%" fill="none" stroke="#F0ABFC" stroke-width="2" stroke-linecap="round" opacity="0.22">
          <animate attributeName="d" values="M 75% 70% Q 78% 65%, 81% 70% T 87% 70% T 93% 70%;M 75% 72% Q 78% 67%, 81% 72% T 87% 72% T 93% 72%;M 75% 70% Q 78% 65%, 81% 70% T 87% 70% T 93% 70%" dur="7s" repeatCount="indefinite"/>
        </path>

        <!-- Stars / sparkles -->
        <path d="M 30% 15% l 2 -6 2 6 6 2 -6 2 -2 6 -2 -6 -6 -2 6 -2z" fill="#F0ABFC" opacity="0.3">
          <animate attributeName="opacity" values="0.3;0.1;0.3" dur="3s" repeatCount="indefinite"/>
        </path>
        <path d="M 92% 88% l 1.5 -4.5 1.5 4.5 4.5 1.5 -4.5 1.5 -1.5 4.5 -1.5 -4.5 -4.5 -1.5 4.5 -1.5z" fill="#67E8F9" opacity="0.25">
          <animate attributeName="opacity" values="0.25;0.08;0.25" dur="4s" repeatCount="indefinite"/>
        </path>
        <path d="M 55% 50% l 1.5 -4.5 1.5 4.5 4.5 1.5 -4.5 1.5 -1.5 4.5 -1.5 -4.5 -4.5 -1.5 4.5 -1.5z" fill="#A78BFA" opacity="0.2">
          <animate attributeName="opacity" values="0.2;0.05;0.2" dur="5s" repeatCount="indefinite"/>
        </path>

        <!-- Zig-zag / lightning bolt -->
        <polyline points="20%,40% 22%,35% 24%,42% 26%,37% 28%,44%" fill="none" stroke="#A78BFA" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" opacity="0.22">
          <animate attributeName="opacity" values="0.22;0.1;0.22" dur="4s" repeatCount="indefinite"/>
        </polyline>
      </svg>
    </div>

    <div class="w-full min-h-screen flex flex-col md:flex-row relative z-[1]">
      <div id="topNav" class="bg-theme-sidebar flex justify-between md:hidden">
        <div
          class="gradient-border fill-bg min-h-16 min-w-16 flex items-center justify-center"
        >
          <a href="/" aria-label="Return to home page">
            <Icon
              name="tabler:hexagon-letter-s-filled"
              size={48}
              class="hover:text-theme-text transition duration-100 z-10 relative"
            /></a
          >
        </div>
        <div class="flex items-center gap-2 mr-2">
          <select id="themeSelectMobile" class="theme-selector" aria-label="Select theme">
            <option value="default">Default</option>
            <option value="90s-baby">90s Baby</option>
          </select>
          <div id="topNavToggle" class="flex justify-center items-center">
            <Icon
              name="fa6-solid:bars"
              size={36}
              class="text-theme-icon-idle hover:text-theme-accent transition duration-100"
            />
          </div>
        </div>
      </div>
      <div
        id="sidebar"
        class="gradient-border min-h-screen bg-theme-sidebar nineties-sidebar-pattern md:min-w-[270px] md:w-1/3 w-full md:flex justify-end md:!relative hidden !absolute top-16 md:top-0 left-0 z-10"
      >
        <div
          class="max-h-[850px] h-full min-w-[270px] max-w-full py-12 px-6 flex flex-col justify-between items-end text-theme-text sticky top-0"
        >
          <div class="flex flex-col items-center w-full">
            <nav class="flex justify-center w-full">
              <ul class="text-3xl md:text-xl font-bold">
                {
                  sidebarLinks.map((link) => (
                    <li
                      class={
                        sideLinkClasses +
                        (link.active ? activeLinkClasses : passiveLinkClasses)
                      }
                    >
                      <a href={link.href}>{link.title}</a>
                    </li>
                  ))
                }
              </ul>
            </nav>

            <!-- Desktop theme selector -->
            <div class="hidden md:flex items-center gap-2 mt-8 w-full justify-center">
              <label for="themeSelectDesktop" class="text-xs text-theme-text-secondary">Theme:</label>
              <select id="themeSelectDesktop" class="theme-selector" aria-label="Select theme">
                <option value="default">Default</option>
                <option value="90s-baby">90s Baby</option>
              </select>
            </div>
          </div>
          <div class="w-full mt-48 md:mt-0">
            <div class="flex flex-row justify-center">
              <a
                href="https://www.linkedin.com/in/bryce-stabenow-dev/"
                target="_blank"
                aria-label="Link to my LinkedIn page"
              >
                <Icon
                  name="mdi:linkedin"
                  size={36}
                  class="hover:text-theme-accent transition duration-100"
                />
              </a>
              <a
                href="https://x.com/BryceStabenow"
                target="_blank"
                class="mx-2"
                aria-label="Link to my Twitter/X Profile"
              >
                <Icon
                  name="mdi:twitter"
                  size={36}
                  class="hover:text-theme-accent transition duration-100"
                />
              </a>
              <a
                href="https://github.com/Bryce-Stabenow"
                target="_blank"
                aria-label="Link to my GitHub account"
              >
                <Icon
                  name="mdi:github"
                  size={36}
                  class="hover:text-theme-accent transition duration-100"
                />
              </a>
            </div>
            <span class="block text-center">&copy; Bryce Stabenow, 2026</span>
          </div>
        </div>
      </div>

      <main class="bg-theme-main nineties-bg-pattern w-full min-h-screen py-12 px-6 text-theme-text">
        <div class="max-w-3xl mx-auto">
          <slot />
        </div>
      </main>
    </div>
    <script>
      function setTheme(theme: string) {
        document.documentElement.setAttribute('data-theme', theme);
        localStorage.setItem('theme', theme);
        // Sync all selector dropdowns
        document.querySelectorAll<HTMLSelectElement>('.theme-selector').forEach(sel => {
          sel.value = theme;
        });
      }

      function initTheme() {
        const saved = localStorage.getItem('theme') || 'default';
        setTheme(saved);

        // Attach change listeners to all theme selectors
        document.querySelectorAll<HTMLSelectElement>('.theme-selector').forEach(sel => {
          sel.addEventListener('change', (e) => {
            const target = e.target as HTMLSelectElement;
            setTheme(target.value);
          });
        });
      }

      function toggleMenu() {
        const sidebar = document.getElementById("sidebar");

        if (sidebar !== null) {
          sidebar.classList.toggle("hidden");
          document.body.classList.toggle("overflow-hidden");
        }
      }

      // Need to make sure that Astro refreshes this when re-rendering on a new page
      // as well as when the page is loaded for the first time
      document.addEventListener("astro:page-load", () => {
        document
          .getElementById("topNavToggle")
          ?.addEventListener("click", toggleMenu);
        initTheme();
      });

      document.addEventListener("astro:after-swap", () => {
        document
          .getElementById("topNavToggle")
          ?.addEventListener("click", toggleMenu);
        initTheme();
      });
    </script>
  </body>
</html>
